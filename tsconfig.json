{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "module": "NodeNext",
    "noEmit": true,
    "resolveJsonModule": true,
    "strict": true,
    "target": "es2023",
    "baseUrl": "./",
    "paths": {
      "~/*": ["./*"]
    },
    "typeRoots": ["./src/typings", "./node_modules/@types"]
  },
  "include": [
    "**/*.cjs",
    "**/*.js",
    "**/*.mjs",
    ".eslintrc.*",
    ".prettierrc.*",
    ".lintstagedrc.*"
  ],
  "exclude": ["node_modules", "coverage", ".server"]
}
